<h1>Review for <%= @item.name %></h1>

<%= form_for [:default, @item, Review.new] do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, size: 40 %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :rating %>
    <%= f.collection_select :rating, (1..5), :to_s, :to_s, include_blank: true %>
  </div>

  <%= f.submit 'Submit', class: "btn" %>
<% end %>
