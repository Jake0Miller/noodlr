<%= javascript_include_tag "welcome" %>
<script>
  var restaurants = [];
  var lat = <%= @coordinates[0] %>;
  var lng = <%= @coordinates[1] %>;
  <% @restaurants.each do |restaurant| %>
    var restaurant = ['<%= restaurant.name %>', <%= restaurant.latitude %>, <%= restaurant.longitude %>, '<%= restaurant.address_1 %>, <%= restaurant.city %>, <%= restaurant.state %> <%= restaurant.zip_code %>']
    restaurants.push(restaurant)
  <% end %>
  document.addEventListener("DOMContentLoaded", function(){
      initMap()
  });
</script>

<div class="row justify-content-center" style="margin-top:30px;">
  <div class="card-group">
    <% @items_by_rating.each do |item| %>
    <section id="item-<%= item.id %>">
      <div class="card" style="align:center;">
        <div class="card-img-top" style="float:inherit;">
          <%= link_to image_tag(item.image, style: "height:230px;"), item.image  %>
        </div>
        <div class="card-body" style="text-align:center;">
          <h5 class="card-title"><%= item.name %></h5>
          <p class="card-text">Price: <%= number_to_currency(item.price) %></p>
          <p class="card-text">Average Rating: <%= item.average_rating %></p>
        </div>
        <div class="card-footer" style="text-align:center;">
          <p class="card-text"><small class="text-muted"><%= link_to item.restaurant.name, restaurant_path(item.restaurant) %></small></p>
        </div>
      </div>
      <br>
    </section>
    <% end %>
  </div>
</div>

<div class="index_main">
  <div class="fixed_column">
    <div class="nearby">
      <ul>
        <% @restaurants.each_with_index do |restaurant, i| %>
          <div class="card border-primary mb-3" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title" onclick="showMarker(<%= i %>)"><%= restaurant.name %></h5>
              <p class="card-text" onclick="showMarker(<%= i %>)" style="color: blue"><%= restaurant.address_1 %>, <%= restaurant.city %>, <%= restaurant.state %> <%= restaurant.zip_code %></p>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="fluid-column">
    <div id="map" style="width:70%; height:100%;display:inline-block; box-shadow: 0px 0px 2px 0px grey;"></div>
  </div>
</div>
