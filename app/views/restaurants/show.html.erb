    document.addEventListener("DOMContentLoaded", function(){
        initMap(<%=@restaurant.latitude%>, <%=@restaurant.longitude%>)
    });
  </script>
<% end %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @restaurant.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @restaurant.longitude %>
</p>

<div id="map">

</div>


