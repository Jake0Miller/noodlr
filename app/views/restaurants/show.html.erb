<% provide :head_tags do %>
  <script>
    document.addEventListener("DOMContentLoaded", function(){
        initMap(<%=@restaurant.latitude%>, <%=@restaurant.longitude%>)
    });
  </script>
<% end %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @restaurant.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @restaurant.longitude %>
</p>

<div id="map">

</div>


<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>

# <h1><%= @restaurant.name %></h1>

<section class='items'>
  <h2>Dishes</h2>

  <% @restaurant.items.each do |item| %>
    <section class='item' id='<%= item.name %>'>
      <p><%= link_to item.name, item_path(item) %></p>
      <p>Average Rating: <%= item.average_rating.round(1) %></p>

      <% if current_user&.default? && current_user.registered == 'true' && current_user.reviewable?(item) %>
        <%= link_to "Write a Review", new_default_item_review_path(item) %>
      <% end %>
    </section>
  <% end %>
</section>